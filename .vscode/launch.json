    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "EPF Launch Chrome (MacOS + Chrome)",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/src/eida-portal-frontend/",
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "EPB Launch Chrome (MacOS + Chrome)",
            "url": "http://localhost:3000",
            "program": "${workspaceFolder}/src/eida-portal-backend/server.js"
        },
        {
            "type": "chrome",
            "request": "launch",
            "runtimeExecutable": "/opt/google/chrome/chrome",
            "name": "EPF Launch Chrome (Linux + Chrome)",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/src/eida-portal-frontend/",
            "sourceMaps": true
            // "breakOnLoad": true,
            // "sourceMapPathOverrides": {
            //     "*": "${webRoot}/*"
            // }
        }
    ]
}